<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".workStatusdisplay">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/application_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Application ID:"
            android:textColor="#000000"
            android:textSize="32sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </TextView>

        <ImageView
            android:id="@+id/dashed_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/application_id">

        </ImageView>

        <ImageView
            android:id="@+id/step1_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_mark"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/dashed_line"
            app:layout_constraintStart_toStartOf="parent">


        </ImageView>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:lottie_rawRes="@raw/successfullydone"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:layout_constraintBottom_toBottomOf="@id/step1_marker"
            app:layout_constraintTop_toBottomOf="@id/dashed_line"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"



            />

        <TextView
            android:id="@+id/employee_review_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Review"
            app:layout_constraintTop_toTopOf="@id/step1_marker"
            app:layout_constraintBottom_toBottomOf="@id/step1_marker"
            app:layout_constraintStart_toEndOf="@id/step1_marker"
            android:padding="8dp"
            android:layout_margin="16dp"
            android:textSize="20sp">

        </TextView>

        <ImageView
            android:id="@+id/step2_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_mark"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/step1_marker"
            app:layout_constraintStart_toStartOf="parent">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Site Inspection"
            app:layout_constraintTop_toTopOf="@id/step2_marker"
            app:layout_constraintBottom_toBottomOf="@id/step2_marker"
            app:layout_constraintStart_toEndOf="@id/step2_marker"
            android:padding="8dp"
            android:layout_margin="16dp"
            android:textSize="20sp">

        </TextView>


        <ImageView
            android:id="@+id/step3_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_mark"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/step2_marker"
            app:layout_constraintStart_toStartOf="parent">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOCs and dues"
            app:layout_constraintTop_toTopOf="@id/step3_marker"
            app:layout_constraintBottom_toBottomOf="@id/step3_marker"
            app:layout_constraintStart_toEndOf="@id/step3_marker"
            android:padding="8dp"
            android:layout_margin="16dp"
            android:textSize="20sp">

        </TextView>


        <ImageView
            android:id="@+id/step4_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_mark"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/step3_marker"
            app:layout_constraintStart_toStartOf="parent">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Final Approval"
            app:layout_constraintTop_toTopOf="@id/step4_marker"
            app:layout_constraintBottom_toBottomOf="@id/step4_marker"
            app:layout_constraintStart_toEndOf="@id/step4_marker"
            android:padding="8dp"
            android:layout_margin="16dp"
            android:textSize="20sp">

        </TextView>


        <ImageView
            android:id="@+id/step5_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/circular_mark"
            app:layout_constraintTop_toBottomOf="@id/step4_marker"
            app:layout_constraintStart_toStartOf="parent">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Application approved"
            app:layout_constraintTop_toTopOf="@id/step5_marker"
            app:layout_constraintBottom_toBottomOf="@id/step5_marker"
            app:layout_constraintStart_toEndOf="@id/step5_marker"
            android:padding="8dp"
            android:layout_margin="16dp"
            android:textSize="20sp">

        </TextView>






    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>