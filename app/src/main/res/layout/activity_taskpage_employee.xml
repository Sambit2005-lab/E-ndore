<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".employeeSide.taskpage_employee">

    <ImageView
        android:id="@+id/task_home_bkcg"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="#74F447"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/dashboard_card"
        android:layout_width="360dp"
        android:layout_height="180dp"
        android:background="@null"
        app:cardCornerRadius="21dp"
        app:layout_constraintTop_toBottomOf="@id/task_home_bkcg"
        app:layout_constraintBottom_toBottomOf="@id/task_home_bkcg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dashboard_carddesign">

            <TextView
                android:id="@+id/dashboard_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Dashboard"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:textSize="22sp"
                android:textStyle="bold"/>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dashboard_card"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/current_task_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Tasks"
                        android:textSize="22sp"
                        android:layout_weight="2"/>

                    <TextView
                        android:id="@+id/see_all_txtbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="See all>"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:textSize="16sp"
                        android:layout_weight="1"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/current_task_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upcoming Tasks"
                    android:textSize="22sp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/upcoming_tasks_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>